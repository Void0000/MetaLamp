mixin registration-card(params)

    - let {title} = params
    - let {accText} = params 


    .registration-card   
        .registration-card__title #{title}
        .registration-card__text-fields     
            +text-field({placeholder: "Имя"})
            +text-field({placeholder: "Фамилия"})
        .registration-card__radio-buttons
            +radio-buttons({buttons: [{title: "Мужчина", checked: true}, 
                                                              {title: "Женщина", checked: false}]})                                                                                  
        .registration-card__birthday-field
            +text-field({title: "дата рождения", name: "masked-text-field", mask: "date-mask"})

        .registration-card__data
            +text-field({title: "данные для входа в сервис", type: "email", placeholder: "Email"})
            +text-field({placeholder: "Пароль"})
        .registration-card__toggle
            +toggle({title: "", desc:"Получать спецпредложения"})
        .registration-card__button
            +buttons({buttonText: "перейти к оплате", theme: "pay"})
        .registration-card__sign-in
            span.registration-card__sign-in-span #{accText}
            +buttons({buttonText: "войти", theme: "counter's"})                                                   




            