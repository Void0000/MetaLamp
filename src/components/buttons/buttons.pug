mixin buttons
            -var title = "buttons"
            -var buttonText = "click me"
            -var payButtonText = "перейти к оплате"

            .buttons
                span.buttons__title.buttons__title--bold #{title}
                form.buttons__form
                    button(type="button").buttons__fill-button #{buttonText}
                    button(type="button").buttons__fill-button.buttons__fill-button-second #{buttonText}
                form.buttons__form
                    button(type="button").buttons__counter-button 
                    button(type="button").buttons__counter-button.buttons__counter-button-second 
                form.buttons__form
                    button(type="button").buttons__no-border-button #{buttonText}
                    button(type="button").buttons__no-border-button.buttons__no-border-button-second #{buttonText}
                form.buttons__form
                    button(type="button").buttons__pay-button #{payButtonText}
                     

                  


            
