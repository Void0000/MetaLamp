mixin rate-button
   
    .rate-button
        span.rate-button__title.rate-button__title--bold RATE BUTTON
        form.rate-button__form
                input#radio1(type='radio' name='estrellas' value='1')
                label(for='radio1') 
                input#radio2(type='radio' name='estrellas' value='2' checked='')
                label(for='radio2')           
                input#radio3(type='radio' name='estrellas' value='3')             
                label(for='radio3')            
                input#radio4(type='radio' name='estrellas' value='4' )            
                label(for='radio4')               
                input#radio5(type='radio' name='estrellas' value='5')          
                label(for='radio5') 
        form.rate-button__form.rate-button__form--secondRate
                input#radio6(type='radio' name='estrellasSecond' value='1' checked='')
                label(for='radio6') 
                input#radio7(type='radio' name='estrellasSecond' value='2' )
                label(for='radio7')           
                input#radio8(type='radio' name='estrellasSecond' value='3')             
                label(for='radio8')            
                input#radio9(type='radio' name='estrellasSecond' value='4' )            
                label(for='radio9')               
                input#radio10(type='radio' name='estrellasSecond' value='5')          
                label(for='radio10') 



            
