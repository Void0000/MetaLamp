mixin rate-button(params)
   
   
    

   
    .rate-button
        if (params.title)
                span.rate-button__title--bold= params.title
        span.rate-button__title.rate-button__title--bold 
        form.rate-button__form
                input#rating-5(type='radio' name='rating')
                label(for='rating-5')
                input#rating-4(type='radio' name='rating' checked)
                label(for='rating-4')
                input#rating-3(type='radio' name='rating')
                label(for='rating-3')
                input#rating-2(type='radio' name='rating')
                label(for='rating-2')
                input#rating-1(type='radio' name='rating')
                label(for='rating-1')
        


                
      



            
