mixin text-field(params)
    - var classes = ["text-field"]
    - var placeHolder
    - var fieldPattern
    - var type = "text"
   
    
    
    if (params.type)
        - type = params.type
    if (params.placeholder)
        - placeHolder = params.placeholder
    if(params.mask)
        - classes.push(params.mask)
    if(params.class)
        - classes.push(params.class)
    case params.mask
        when "date-mask"
            - fieldPattern = "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" 

    input(type=type, class=classes, id=params.id, name=params.name, placeholder=params.placeholder, 
    value=params.value, pattern=fieldPattern, readonly=params.ro, required=params.rq, 
    autocomplete=params.autocomplete)