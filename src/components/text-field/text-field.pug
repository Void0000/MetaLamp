mixin text-field(params)
    - let classes = ["text-field"]
   
    
    +input-container({title: params.title, titleSecond: params.titleSecond})

        if(params.mask)
            - classes.push(params.mask)
        if(params.class)
            - classes.push(params.class)
        case params.mask
            when "date-mask"
                - fieldPattern = "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" 
        case params.textFieldType
            when "subscription"
                - classes.push(classes + "--subscription")

                
        
        form(class=classes)
            input(type=params.type, class="text-field__input", id=params.id, name=params.name, placeholder=params.placeholder, 
            value=params.value, pattern=params.fieldPattern, readonly=params.ro, required=params.rq, 
            autocomplete=params.autocomplete)
        
        
